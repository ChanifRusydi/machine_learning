#!/bin/bash
# description: My Script
# processname: myscript

case $1 in
    start)
        /bin/bash /home/jetson/machine_learning/script.sh &
        ;;
    stop)
        pkill -f /home/jetson/machine_learning/script.sh
        ;;
    restart)
        pkill -f /home/jetson/machine_learning/script.sh
        /bin/bash /home/jetson/machine_learning/script.sh &
        ;;
esac

exit 0